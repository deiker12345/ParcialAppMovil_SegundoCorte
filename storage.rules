rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Permitir que usuarios autenticados suban archivos dentro de su propio folder
    match /tinder/{userId}/{allPaths=**} {
      allow read: if true; // todos pueden leer las fotos públicas
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // También mantener compatibilidad con la ruta profiles por si acaso
    match /profiles/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
